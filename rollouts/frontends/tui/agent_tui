#!/usr/bin/env python3
"""
Wrapper script to run agent_tui CLI.

Usage:
    ./agent_tui --help
    ./agent_tui --model gpt-4o-mini

This script sets up the Python path correctly and runs the CLI.
"""

import sys
from pathlib import Path

# Add rollouts directory to Python path so we can import rollouts.frontends
# File structure: rollouts/frontends/tui/agent_tui
# We need: rollouts/ in the path
rollouts_dir = Path(__file__).parent.parent.parent
if str(rollouts_dir) not in sys.path:
    sys.path.insert(0, str(rollouts_dir))

# Now import and run the CLI
if __name__ == "__main__":
    try:
        from rollouts.frontends.tui.cli import main
        sys.exit(main())
    except ImportError as e:
        print(f"Error importing CLI: {e}", file=sys.stderr)
        print(f"Python path: {sys.path}", file=sys.stderr)
        print(f"Rollouts dir: {rollouts_dir}", file=sys.stderr)
        sys.exit(1)

